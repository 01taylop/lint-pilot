{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./lib",
    "paths": {
      "@Jest/*": ["./jest-config/*"],
      "@Linters": ["./src/linters/index.ts"],
      "@Types/*": ["./src/types/*"],
      "@Utils/*": ["./src/utils/*"],
    },
    "resolveJsonModule": true,
    "rootDir": "./",
    "strict": true,
    "target": "ESNext"
  },
  "include": [
    "config",
    "jest-config",
    "src"
  ],
  "exclude": ["node_modules"]
}
