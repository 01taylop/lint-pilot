{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": true,
    "paths": {
      "@Jest/*": ["./jest-config/*"],
      "@Types": ["./src/types/index.ts"],
      "@Types/*": ["./src/types/*"],
      "@Utils/*": ["./src/utils/*"],
    },
    "resolveJsonModule": true,
    "rootDir": "./",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": [
    "config/**/*",
    "jest-config/**/*",
    "src/**/*"
  ],
  "exclude": [
    "lib/**/*",
    "node_modules/**/*"
  ]
}
